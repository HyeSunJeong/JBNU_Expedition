<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#F9F9F9">


        <ImageView
            android:id="@+id/diary_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/back">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/apple_sd_gothic_neo_extra_bold"
            android:text="탐험 일지"
            android:textColor="#747474"
            android:textSize="25dp">
        </TextView>

    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/line">
    </ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1F1F1">
            <FrameLayout
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--location0,location1-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--location0-->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/loc0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="12.5dp"
                                android:src="@drawable/diary">
                            </ImageView>
                            <!--location0 탐험 UI-->
                            <LinearLayout
                                android:layout_width="180dp"
                                android:layout_height="200dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="103dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/loc0">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="10dp"
                                    android:text="전북대의 유럽"
                                    android:textSize="17.5dp"
                                    android:textColor="#A0A0A0"
                                    android:fontFamily="@font/apple_sd_gothic_neo_bold">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="1dp"
                                    android:text="중앙도서관"
                                    android:textSize="23dp"
                                    android:textColor="#747474"
                                    android:fontFamily="@font/apple_sd_gothic_neo_extra_bold">
                                </TextView>
                            </LinearLayout>
                        </FrameLayout>

                        <!--location1-->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/loc1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/diary">
                            </ImageView>
                            <!--location1 탐험 UI-->
                            <LinearLayout
                                android:layout_width="180dp"
                                android:layout_height="200dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="103dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/loc1">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="10dp"
                                    android:text="역사 속 한 장면"
                                    android:textSize="17.5dp"
                                    android:textColor="#A0A0A0"
                                    android:fontFamily="@font/apple_sd_gothic_neo_bold">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="1dp"
                                    android:text="분수대"
                                    android:textSize="23dp"
                                    android:textColor="#747474"
                                    android:fontFamily="@font/apple_sd_gothic_neo_extra_bold">
                                </TextView>
                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>

                    <!--location2, location3-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="15dp">

                        <!--location2-->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/loc2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="12.5dp"
                                android:src="@drawable/diary">
                            </ImageView>
                            <!--location2 탐험 UI-->
                            <LinearLayout
                                android:layout_width="180dp"
                                android:layout_height="200dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="103dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/loc2">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="10dp"
                                    android:text="전북대의 랜드마크"
                                    android:textSize="17.5dp"
                                    android:textColor="#A0A0A0"
                                    android:fontFamily="@font/apple_sd_gothic_neo_bold">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="1dp"
                                    android:text="신정문"
                                    android:textSize="23dp"
                                    android:textColor="#747474"
                                    android:fontFamily="@font/apple_sd_gothic_neo_extra_bold">
                                </TextView>
                            </LinearLayout>
                        </FrameLayout>

                        <!--location3-->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/loc3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/diary">
                            </ImageView>
                            <!--location3 탐험 UI-->
                            <LinearLayout
                                android:layout_width="180dp"
                                android:layout_height="200dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="103dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/loc3">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="10dp"
                                    android:text="소공의 고향, 심장"
                                    android:textSize="17.5dp"
                                    android:textColor="#A0A0A0"
                                    android:fontFamily="@font/apple_sd_gothic_neo_bold">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="1dp"
                                    android:text="공대 5호관"
                                    android:textSize="23dp"
                                    android:textColor="#747474"
                                    android:fontFamily="@font/apple_sd_gothic_neo_extra_bold">
                                </TextView>
                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>


                    <!--location4, location5-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="15dp">

                        <!--location4-->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/loc4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="12.5dp"
                                android:src="@drawable/diary">
                            </ImageView>
                            <!--location4 탐험 UI-->
                            <LinearLayout
                                android:layout_width="180dp"
                                android:layout_height="200dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="103dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/loc4">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="10dp"
