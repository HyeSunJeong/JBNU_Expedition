                                    android:textSize="17.5dp"
                                    android:textColor="#A0A0A0"
                                    android:fontFamily="@font/apple_sd_gothic_neo_bold">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="1dp"
                                    android:text="구정문"
                                    android:textSize="23dp"
                                    android:textColor="#747474"
                                    android:fontFamily="@font/apple_sd_gothic_neo_extra_bold">
                                </TextView>
                            </LinearLayout>
                        </FrameLayout>

                        <!--location5-->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/loc5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/diary">
                            </ImageView>
                            <!--location5 탐험 UI-->
                            <LinearLayout
                                android:layout_width="180dp"
                                android:layout_height="200dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="103dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/loc5">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="10dp"
                                    android:text="밤 산책에는"
                                    android:textSize="17.5dp"
                                    android:textColor="#A0A0A0"
                                    android:fontFamily="@font/apple_sd_gothic_neo_bold">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="1dp"
                                    android:text="덕진공원"
                                    android:textSize="23dp"
                                    android:textColor="#747474"
                                    android:fontFamily="@font/apple_sd_gothic_neo_extra_bold">
                                </TextView>
                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>


                    <!--location6, location7-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="15dp">
                        <!--location6-->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/loc6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="12.5dp"
                                android:src="@drawable/diary">
                            </ImageView>
                            <!--location6 탐험 UI-->
                            <LinearLayout
                                android:layout_width="180dp"
                                android:layout_height="200dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="103dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/loc6">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="10dp"
                                    android:text="공대인의 밥집"
                                    android:textSize="17.5dp"
                                    android:textColor="#A0A0A0"
                                    android:fontFamily="@font/apple_sd_gothic_neo_bold">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="1dp"
                                    android:text="후생관"
                                    android:textSize="23dp"
                                    android:textColor="#747474"
                                    android:fontFamily="@font/apple_sd_gothic_neo_extra_bold">
                                </TextView>
                            </LinearLayout>
                        </FrameLayout>

                        <!--location7-->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/loc7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/diary">
                            </ImageView>
                            <!--location7 탐험 UI-->
                            <FrameLayout
                                android:layout_width="180dp"
                                android:layout_height="200dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Comming Soon"
                                    android:textSize="20dp"
                                    android:textColor="#A0A0A0"
                                    android:fontFamily="@font/apple_sd_gothic_neo_bold">
                                </TextView>
                            </FrameLayout>
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </FrameLayout>
    </ScrollView>

</LinearLayout>