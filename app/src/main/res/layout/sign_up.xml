<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9">

    <ImageView
        android:id="@+id/sign_up_back"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/back">
    </ImageView>

    <ImageView
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/line">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="35dp"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="30dp"
        android:textColor="#747474"
        android:fontFamily="@font/apple_sd_gothic_neo_heavy">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:text="정보를 입력하세요"
        android:textSize="20dp"
        android:textColor="#747474"
        android:fontFamily="@font/apple_sd_gothic_neo_bold">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/sign_up_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/apple_sd_gothic_neo_medium"
            android:hint="아이디"
            android:paddingLeft="25dp"
            android:textColorHint="#A3A3A3"
            android:textSize="18dp"></EditText>

        <EditText
            android:id="@+id/sign_up_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/apple_sd_gothic_neo_medium"
            android:hint="이메일"
            android:paddingLeft="25dp"
            android:textColorHint="#A3A3A3"
            android:textSize="18dp"></EditText>

        <EditText
            android:id="@+id/sign_up_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/apple_sd_gothic_neo_medium"
            android:hint="비밀번호"
            android:paddingLeft="25dp"
            android:textColorHint="#A3A3A3"
            android:textSize="18dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/apple_sd_gothic_neo_bold"
            android:gravity="center"
            android:text="회원가입을 환영합니다!"
            android:textColor="#747474"
            android:textSize="18dp"></TextView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/join_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_border">
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/apple_sd_gothic_neo_extra_bold"
                android:text="회원가입"
                android:textColor="#6F6F6F"
                android:textSize="19dp" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>